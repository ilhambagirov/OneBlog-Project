@model Blog
@{
    ViewData["Title"] = "Detail";
}
<div class="section article-hero wf-section">
    <div class="container w-container">
        <div class="content-wrapper article-hero">
            <a href="../author/raymond-sowie"
               class="link-block article-author-hero w-inline-block">
               @* <img loading="lazy"
                     src="~/Images/BlogImages/@Model.FilePath"
                     alt=""
                     class="image article-author" />*@
                <p class="paragraph-small article-author">Ilham Baghirov</p>
            </a>
            <div class="article-hero-title">
                <h1 class="title">Day trips around Arizona</h1>
                <p class="paragraph article-hero">
                   @Model.ShortDescription
                </p>
            </div>
            <div class="article-details">
                <a id="w-node-_2368aa21-d1bb-b07a-9422-cd339e2febbd-b2ef100f"
                   href="../category/europe"
                   class="article-category-link w-inline-block"><div class="article-category-name">Europe</div></a>
                <div class="article-date-time">
                    <div class="tagline">@Model.CreatedDate.ToString("yyyy-mmm-dd")</div>
                    <div class="tagline article"><strong>•</strong></div>
                    <div class="tagline">8 min read</div>
                </div>
            </div>
        </div>
    </div>
    <img src="https://uploads-ssl.webflow.com/60e5cb5a711f56fa1893d065/60e5cb5a711f566de993d0bb_Pattern Left.svg"
         loading="lazy"
         alt=""
         class="pattern-left-top" />
</div>
<div class="section article-hero-image wf-section">
    <div class="container w-container">
        <div class="content-wrapper article-main-image">
            <img src="~/Images/BlogImages/@Model.FilePath"
                 loading="lazy"
                 data-w-id="03b271fa-92fe-4da6-7339-47f7a5ae9bb7"
                 alt=""
                 class="image article-hero" />
        </div>
    </div>
    <div class="content-wrapper article-background">
        <img src="https://uploads-ssl.webflow.com/60e5cb5a711f56fa1893d065/60e5cb5a711f565bcb93d0ba_Pattern Right.svg"
             loading="lazy"
             alt=""
             class="pattern-right-bottom" />
    </div>
</div>
<div class="section article-content wf-section">
    <div class="container w-container">
        <div class="content-wrapper article-content">
            <div id="w-node-_21ce002a-ccf2-84a5-ca8c-34d81e790367-b2ef100f"
                 class="rich-text-wrapper">
                <div class="article article-content w-richtext">
                    <p>
                      @Model.Body
                    </p>
                </div>
                <div class="w-dyn-list">
                    <div role="list" class="tags-list w-dyn-items">
                        <div role="listitem" class="w-dyn-item">
                            <a href="../tag/adventure"
                               class="link-block tag w-inline-block"><div>Adventure</div></a>
                        </div>
                        <div role="listitem" class="w-dyn-item">
                            <a href="../tag/arizona.html"
                               class="link-block tag w-inline-block"><div>Arizona</div></a>
                        </div>
                        <div role="listitem" class="w-dyn-item">
                            <a href="../tag/lifestyle"
                               class="link-block tag w-inline-block"><div>Lifestyle</div></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container w-container">
    <div class="divider margin-top-128"></div>
</div>
